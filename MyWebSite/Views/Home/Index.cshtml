<script>
    $(document).ready(function () {


        $('#btnMailGonder').click(function () {
            MailGonder();
        });

        $('#btnMailGonder').click(function () {
            $("#modalID").modal("show");
            $(".modal-backdrop.fade.show").removeClass("modal-backdrop fade show");
        });

        $(".modal-backdrop.fade.show").click(function () {
            alert("Mesajınız Başarılı Bir Şekilde Gönderildi.")
        });


        $(".skills").addClass("active")
        $(".skills .skill .skill-bar span").each(function () {
            $(this).animate({
                "width": $(this).parent().attr("data-bar") + "%"
            }, 1000);
            $(this).append('<b>' + $(this).parent().attr("data-bar") + '%</b>');
        });
        setTimeout(function () {
            $(".skills .skill .skill-bar span b").animate({ "opacity": "1" }, 1000);
        }, 2000);

    })


    function MailGonder() {
        var Mail = {};
        Mail["isim"] = $("#isim").val();
        Mail["soyisim"] = $("#soyisim").val();
        Mail["konu"] = $("#konu").val();
        Mail["mesaj"] = $("#mesaj").val();
        Mail["email"] = $("#email").val();

        var _data = JSON.stringify(Mail);
        $.ajax({

            type: "POST",
            url: "/Home/MailGonder",
            data: _data,
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            success: function (result) {

                if (result != null && result) {

                    $("#isim").val("");
                    $("#soyisim").val("");
                    $("#konu").val("");
                    $("#mesaj").val("");
                    $("#email").val("");

                }
            },
        });
    }
</script>


